<button
  class="theme-toggle inline-flex items-center justify-center rounded-md h-9 w-9 text-foreground/60 hover:text-foreground hover:bg-accent transition-colors"
  type="button"
  aria-label="Toggle theme"
>
  <svg
    class="sun-icon h-5 w-5"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="4" />
    <path d="M12 2v2" />
    <path d="M12 20v2" />
    <path d="m4.93 4.93 1.41 1.41" />
    <path d="m17.66 17.66 1.41 1.41" />
    <path d="M2 12h2" />
    <path d="M20 12h2" />
    <path d="m6.34 17.66-1.41 1.41" />
    <path d="m19.07 4.93-1.41 1.41" />
  </svg>
  <svg
    class="moon-icon h-5 w-5"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z" />
  </svg>
</button>

<script>
  function updateAllIcons() {
    const isDark = document.documentElement.classList.contains("dark");
    const allSunIcons = document.querySelectorAll(".sun-icon");
    const allMoonIcons = document.querySelectorAll(".moon-icon");

    allSunIcons.forEach(sunIcon => {
      if (isDark) {
        // Dark mode: show sun icon (to switch to light)
        sunIcon.style.display = "block";
      } else {
        // Light mode: hide sun icon
        sunIcon.style.display = "none";
      }
    });

    allMoonIcons.forEach(moonIcon => {
      if (isDark) {
        // Dark mode: hide moon icon
        moonIcon.style.display = "none";
      } else {
        // Light mode: show moon icon (to switch to dark)
        moonIcon.style.display = "block";
      }
    });
  }

  function initThemeToggles() {
    const toggles = document.querySelectorAll(".theme-toggle");

    // Set initial icon state for all toggles
    updateAllIcons();

    toggles.forEach(toggle => {
      toggle.addEventListener("click", () => {
        const isDark = document.documentElement.classList.contains("dark");

        if (isDark) {
          document.documentElement.classList.remove("dark");
          localStorage.setItem("theme", "light");
        } else {
          document.documentElement.classList.add("dark");
          localStorage.setItem("theme", "dark");
        }

        // Update all icons after toggle
        updateAllIcons();
      });
    });
  }

  // Run on initial load
  initThemeToggles();

  // Re-run after View Transitions navigation
  document.addEventListener("astro:after-swap", initThemeToggles);
</script>
