---
interface Props {
  tagline?: string;
  title: string;
  description: string;
  features?: string[];
  imageSide?: "left" | "right";
}

const { tagline, title, description, features, imageSide = "right" } = Astro.props;
---

<section class="py-16 md:py-24">
  <div class="container max-w-5xl mx-auto">
    <div class:list={[
      "grid gap-12 lg:grid-cols-2 lg:gap-16 items-center",
      imageSide === "left" && "lg:grid-flow-dense"
    ]}>
      <div class:list={[
        "space-y-6",
        imageSide === "left" && "lg:col-start-2"
      ]}>
        {tagline && (
          <p class="text-sm font-semibold text-primary uppercase tracking-wide">
            {tagline}
          </p>
        )}
        <h2 class="text-3xl font-bold tracking-tight md:text-4xl">
          {title}
        </h2>
        <p class="text-lg text-muted-foreground leading-relaxed">
          {description}
        </p>
        {features && features.length > 0 && (
          <ul class="space-y-3 pt-2">
            {features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5 text-primary mt-0.5 flex-shrink-0"
                >
                  <path d="M20 6 9 17l-5-5" />
                </svg>
                <span class="text-muted-foreground">{feature}</span>
              </li>
            ))}
          </ul>
        )}
      </div>
      <div class:list={[
        "relative aspect-square rounded-lg bg-muted overflow-hidden",
        imageSide === "left" && "lg:col-start-1"
      ]}>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-24 w-24 text-muted-foreground/30"
          >
            <rect width="18" height="18" x="3" y="3" rx="2" ry="2" />
            <circle cx="9" cy="9" r="2" />
            <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
