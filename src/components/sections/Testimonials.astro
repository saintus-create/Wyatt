---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
  company: string;
}

interface Props {
  title: string;
  testimonials: Testimonial[];
}

const { title, testimonials } = Astro.props;
---

<section class="py-24">
  <div class="container max-w-5xl mx-auto">
    <div class="flex flex-col items-center space-y-4 text-center">
      <h2 class="text-3xl font-bold leading-[1.1] sm:text-3xl md:text-5xl">
        {title}
      </h2>
    </div>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mt-12">
    {testimonials.map((testimonial) => (
      <div class="rounded-lg border bg-card p-6">
        <blockquote class="text-sm leading-relaxed">
          "{testimonial.quote}"
        </blockquote>
        <div class="mt-4 flex items-center gap-3">
          <div class="h-10 w-10 rounded-full bg-muted flex items-center justify-center">
            <span class="text-sm font-medium">
              {testimonial.author.split(" ").map((n) => n[0]).join("")}
            </span>
          </div>
          <div>
            <p class="text-sm font-medium">{testimonial.author}</p>
            <p class="text-xs text-muted-foreground">
              {testimonial.role}, {testimonial.company}
            </p>
          </div>
        </div>
      </div>
    ))}
    </div>
  </div>
</section>
