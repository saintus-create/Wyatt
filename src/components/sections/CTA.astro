---
interface Props {
  title: string;
  description: string;
  cta: { href: string; label: string };
}

const { title, description, cta } = Astro.props;
---

<section class="py-24">
  <div class="container max-w-5xl mx-auto">
    <div class="rounded-lg border bg-muted/50 p-8 md:p-12 text-center">
    <h2 class="text-3xl font-bold leading-[1.1] sm:text-3xl md:text-4xl">
      {title}
    </h2>
    <p class="mt-4 text-muted-foreground max-w-[600px] mx-auto">
      {description}
    </p>
    <a
      href={cta.href}
      class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8 mt-6"
    >
      {cta.label}
    </a>
    </div>
  </div>
</section>
