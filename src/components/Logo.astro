---
/**
 * Logo Component
 *
 * AstroDeck brand logo with card deck icon and wordmark.
 * Used consistently across Header, Footer, and Auth layouts.
 *
 * @example
 * ```astro
 * <Logo />
 * <Logo showText={false} />
 * <Logo size="lg" />
 * ```
 */
interface Props {
  /** Show the "AstroDeck" text next to the icon */
  showText?: boolean;
  /** Size variant */
  size?: 'sm' | 'md' | 'lg';
  /** Additional CSS classes */
  class?: string;
}

const { 
  showText = true, 
  size = 'md',
  class: className = '',
} = Astro.props;

const sizeClasses = {
  sm: 'h-5 w-5',
  md: 'h-6 w-6',
  lg: 'h-8 w-8',
};

const textSizeClasses = {
  sm: 'text-sm',
  md: 'text-base',
  lg: 'text-lg',
};
---

<a href="/" class:list={["flex items-center space-x-2", className]}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 32 32"
    fill="currentColor"
    class={sizeClasses[size]}
    aria-hidden="true"
  >
    <!-- Main card/deck -->
    <rect x="6" y="8" width="14" height="18" rx="2" fill="currentColor" opacity="0.9"/>
    <!-- Second card (layered) -->
    <rect x="9" y="6" width="14" height="18" rx="2" fill="currentColor" opacity="0.7"/>
    <!-- Third card (layered) -->
    <rect x="12" y="4" width="14" height="18" rx="2" fill="currentColor" opacity="0.5"/>
    <!-- Star on front card -->
    <path d="M19 12 L20 15 L23 15 L20.5 17 L21.5 20 L19 18 L16.5 20 L17.5 17 L15 15 L18 15 Z" fill="currentColor" opacity="0.3"/>
  </svg>
  {showText && (
    <span class:list={["font-bold", textSizeClasses[size]]}>AstroDeck</span>
  )}
</a>
